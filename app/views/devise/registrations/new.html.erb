<div class="containerDE">
  <div class="devise">

    <h1>Sign up</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="emailDE"><%= f.label :email %><br />
      <%= f.email_field :email, :placeholder => " email address", autofocus: true %></div><br />

      <div class="zipcodeDE"><%= f.label :zipcode %><br />
      <%= f.text_field :zipcode, :placeholder => "ex. 24819", autofocus: true, :style => "width: 22.5em; border-radius: .5em; padding: .3em" %></div><br />

      <div class="passwordDE"><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
        <%= f.password_field :password,:placeholder => " password", autocomplete: "off" %></div><br />

      <div class="passwordDE"><%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, :placeholder => " password",autocomplete: "off" %></div><br />

      <div><%= f.label :cell, :style => "width: 17.7em;" 'Cell Phone Number' %><br />
        <%= f.phone_field :cell, :placeholder => "ex. 2021234567" ,autocomplete: "off", :style => "width: 22.5em; text-indent: .2em; border-radius: .5em; padding: .3em" %></div>

      <div><%= f.submit "Sign up!", :class => 'sign_up' %></div><br />
    <% end %>